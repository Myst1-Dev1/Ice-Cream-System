generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SaleType {
  venda
  entrada
}

model Sale {
  id        Int       @id @default(autoincrement())
  category  String
  flavor    String
  price     Float
  amount    Int
  type      SaleType
  createdAt DateTime  @default(now())
}